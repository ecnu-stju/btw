page{
    background: #f4f4f4;
    min-height: 100%;
}

.container{
    background: #f4f4f4;
    min-height: 100%;
    padding-top: 30rpx;
}

.fb-body{
  width: 100%;
  background: #fff;
  height: 274rpx;
  padding: 15rpx 30rpx 64rpx 30rpx;
}

.fb-body .content{
  width: 100%;
  height: 100%;
  color: #333;
  line-height: 40rpx;
  font-size: 34rpx;
}

.fb-body .text-count{
  padding-top: 17rpx;
  line-height: 30rpx;
  float: right;
  color: #666;
  font-size: 28rpx;
}

.fb-btn{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: rgb(51, 51, 51);
  position: fixed;
  bottom: 0;
  left: 0;
  border-radius: 0;
  color: #fff;
  font-size: 33rpx;
}